{
  "info": {
    "name": "AutomationExercise API Tests",
    "_postman_id": "automationexercise-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/productsList",
          "host": ["{{baseUrl}}"],
          "path": ["productsList"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has product list\", function() {",
              "    const json = pm.response.json();",
              "    pm.expect(json.products.length).to.be.above(0);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Product Details",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/productDetails/{{product_id}}",
          "host": ["{{baseUrl}}"],
          "path": ["productDetails", "{{product_id}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Product details contain correct ID\", function() {",
              "    const json = pm.response.json();",
              "    pm.expect(json.products[0].id).to.eql(parseInt(pm.environment.get(\"product_id\")));",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}